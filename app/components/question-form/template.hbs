<ol class="question-form__list">
  {{#each questions as |question|}}
    <li class="question-form__item">
      {{yield question (action "setScore" question.id) isSubmitted}}
    </li>
  {{/each}}
</ol>

{{#if isSubmitted}}
  <div class="question-form__result">
    <p>Well done!</p>

    <p>You scored
      <span class="question-form__score">{{finalScore}}</span>
      out of a potential
      <span class="question-form__score">{{potentialScore}}</span>
      points.
    </p>

    <p>{{link-to "Try another quiz" "quizzes" class="question-form__return"}}</p>
  </div>
{{else}}
  <input type="submit" value="Submit" class="question-form__submit">
{{/if}}
